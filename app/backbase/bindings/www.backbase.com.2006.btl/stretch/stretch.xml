<?xml version="1.0" encoding="UTF-8"?><d:tdl xmlns="http://www.w3.org/1999/xhtml" xmlns:b="http://www.backbase.com/2006/btl"  xmlns:d="http://www.backbase.com/2006/tdl" >

	<d:namespace name="http://www.backbase.com/2006/btl">

		<d:uses element="dimensionElement containerElement" src="../visualElement/visualElement.xml"/>

		<d:element name="stretch" extends="b:dimensionElement b:containerElement">
			

			<d:resource type="text/css"><![CDATA[
				.btl-stretch {
					overflow: auto;
				}
				.ie .btl-stretch {
					position: relative;
				}
			]]></d:resource>

			<d:template type="application/xhtml+xml">
				<div class="btl-stretch">
					<d:content/>
				</div>
			</d:template>

			<d:handler event="construct" type="text/javascript"><![CDATA[
				bb.ui.reflow.add(this);
			]]></d:handler>

			<d:handler event="reflow" type="text/javascript"><![CDATA[
				this.viewNode.style.overflow = 'hidden';
				btl.html.stretch(this.viewNode);
				this.viewNode.style.overflow = 'auto';
			]]></d:handler>
		</d:element>
	</d:namespace>
</d:tdl>